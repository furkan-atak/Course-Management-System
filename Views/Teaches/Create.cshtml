@model CourseManagementSystem.Models.Teach

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{

    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>

}

<h1>Create</h1>

<h4>Teach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseIdFkk" class="control-label"></label>
                <select asp-for="CourseIdFkk" class="form-control" asp-items="ViewBag.CourseIdFkk"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeacherIdFk" class="control-label"></label>
                <select asp-for="TeacherIdFk" class="form-control" asp-items="ViewBag.TeacherIdFk"></select>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#343a40 !important;" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:#343a40 !important;" class="btn" asp-action="Index"><i class="fa fa-arrow-circle-left"></i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
