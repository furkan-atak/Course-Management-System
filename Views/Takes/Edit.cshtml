@model CourseManagementSystem.Models.Take

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1><i class="fa fa-edit fa-4x"></i>Edit</h1>

<h4>Take</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CourseIdFk" class="control-label"></label>
                <select asp-for="CourseIdFk" class="form-control" asp-items="ViewBag.CourseIdFk"></select>
                <span asp-validation-for="CourseIdFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentIdFk" class="control-label"></label>
                <select asp-for="StudentIdFk" class="form-control" asp-items="ViewBag.StudentIdFk"></select>
                <span asp-validation-for="StudentIdFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#343a40 !important;" type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:#343a40 !important;" class="btn" asp-action="Index"><i class="fa fa-arrow-circle-left"></i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
