@model CourseManagementSystem.Models.Take

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Take</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="font:bold;" class="control-label">Courses</label>
                <select asp-for="CourseIdFk" class ="form-control" asp-items="ViewBag.CourseIdFk"></select>
            </div>
            <div class="form-group">
                <label  style="font:bold;" class="control-label">Student</label>
                <select asp-for="StudentIdFk" class ="form-control" asp-items="ViewBag.StudentIdFk"></select>
            </div>
            <div class="form-group">
                <label style="font:bold;" class="control-label">Semester</label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font:bold;" class="control-label">Year</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="font:bold;" class="control-label">Grade</label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#343a40 !important;" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:#343a40 !important;" class="btn" asp-action="Index"><i class="fa fa-arrow-circle-left"></i>Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
